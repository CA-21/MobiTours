<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
    <style name="Theme.Sherlock.Light.Custom" parent="Theme.Sherlock.Light.DarkActionBar">
		<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
		<item name="actionBarItemBackground">@drawable/selector_selectable_background</item>
	</style>

	<style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
		<item name="titleTextStyle">@style/titleTextStyle</item>
	</style>

	<style name="titleTextStyle" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="Animations" />
    <style name="mobistyle" parent="android:Theme.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="textList">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">20sp</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">#FFF</item>
	</style>
	
    <style name="citybutton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">#000000</item>
         <item name="android:background">@null</item>
    </style>
    
    <style name="morebuttons">
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical|</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="HomeToursButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
    </style>
    
     <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
     <!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>

	<style name="Divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/divider_height</item>
	     <item name="android:layout_margin">@dimen/divider_margin</item>
	    <item name="android:background">@android:color/darker_gray</item>
	</style>
	<style name="DividerBold">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/divider_height_bold</item>
	    <item name="android:layout_margin">@dimen/divider_margin_bold</item>
	    <item name="android:background">#ff214dff</item>
	</style>
	 <style name="MapFloorSelectorButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/map_floor_button_background</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>